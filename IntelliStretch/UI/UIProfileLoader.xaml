<UserControl x:Class="IntelliStretch.UI.UIProfileLoader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:IntelliStretch" 
    xmlns:UserControls="clr-namespace:IntelliStretch.UserControls"
    xmlns:value_converters="clr-namespace:IntelliStretch.ValueConverters"
    Background="#C2222222" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <value_converters:JointNameConverter x:Key="jointNameConverter" />
        <Storyboard x:Key="sbScrollIn">
            <DoubleAnimation Storyboard.TargetName="bdrPopup" Storyboard.TargetProperty="Height"
                From="0" To="496" Duration="00:00:01"/>
        </Storyboard>
        <Storyboard x:Key="sbScrollOut">
            <DoubleAnimation Storyboard.TargetName="bdrPopup" Storyboard.TargetProperty="Height"
                From="496" To="0" Duration="00:00:01" Completed="aniScrollOut_Completed"/>
        </Storyboard>
        
        <DataTemplate DataType="{x:Type local:UserProfile}">
            <!-- Rectangle around a Userprofile-object -->
            <Border x:Name="personsBorder" Style="{StaticResource UserBorderStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../images/User_icon-new.png" Margin="30,0" Width="64"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Padding="0,10">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}, {1}" >
                                    <Binding Path="LastName" />
                                    <Binding Path="FirstName" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Joint: " FontSize="20" />
                            <TextBlock Margin="10,0,0,0" Foreground="Red" FontSize="20" Text="{Binding Joint, Converter={StaticResource jointNameConverter}}" />
                        </StackPanel>
                        <TextBlock Foreground="{DynamicResource TertiaryTextColor}" FontSize="18" Padding="0,10">
                            <TextBlock.Text>
                                 <Binding Path="LastLoginTime" StringFormat="Last activity: {0}" />
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=IsSelected}" Value="True">
                    <Setter TargetName="personsBorder" Property="Style" Value="{StaticResource SelectedBorderStyle}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="bdrPopup" Background="#FFC8C8C8" BorderBrush="Black" BorderThickness="0" CornerRadius="5" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="496" Width="600">
            <Grid x:Name="gridPopup">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border CornerRadius="5,5,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.0,0" EndPoint="0.0,1" Opacity="0.8">
                            <GradientStop Color="#222222" Offset="0.5" />
                            <GradientStop Color="#3b3b3b" Offset="1.5" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock x:Name="txtTitle" Text="Select User:" Foreground="#EEEEEEEE" FontSize="32" Margin="20,10"/>
                </Border>

                <Grid x:Name="gridProfileList" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <ListBox x:Name="lstProfiles" Margin="10,20,10,0" Background="#FFC8C8C8" BorderThickness="0" FontSize="32" FontWeight="Bold" HorizontalContentAlignment="Stretch" />
                    <UniformGrid Grid.Row="1" Columns="2">
                        <Button x:Name="btnCreateNew" Height="60" Width="180" Content="Create new" FontSize="24" Click="btnCreateNew_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Yellow"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="DemiBold"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightGray"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="Gray"/>
                                        </Trigger>
                                    </Style.Triggers>

                                    <Style.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5" />
                                        </Style>
                                    </Style.Resources>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="btnSelect" Height="60" Width="180" Content="Select" FontSize="24" Click="btnSelect_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Green"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="DemiBold"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightGray"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="Gray"/>
                                        </Trigger>
                                    </Style.Triggers>

                                    <Style.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5" />
                                        </Style>
                                    </Style.Resources>
                                </Style>
                            </Button.Style>
                        </Button>
                    </UniformGrid>
                </Grid>

                <Grid x:Name="gridNewInput" Visibility="Collapsed" Grid.Row="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Last Name:" FontSize="32" VerticalAlignment="Center" FontWeight="DemiBold" Foreground="Black"/>
                        <TextBox x:Name="txtLastName" FontSize="32" Margin="0,10,0,30" Style="{DynamicResource TextBoxStyle}"/>
                        <TextBlock Text="First Name:" FontSize="32" VerticalAlignment="Center" FontWeight="DemiBold" Foreground="Black"/>
                        <TextBox x:Name="txtFirstName" FontSize="32" Margin="0,20,0,80" Style="{DynamicResource TextBoxStyle}"/>
                        <UniformGrid Columns="2">
                            <Button x:Name="btnCancelNew" Height="60" Width="180" Content="Cancel" FontSize="24" Click="btnCancelNew_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Red"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="LightGray"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="Gray"/>
                                            </Trigger>
                                        </Style.Triggers>

                                        <Style.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5" />
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnNewProfile" Height="60" Width="180" Content="Create" FontSize="24" Click="btnNewProfile_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="LightGray"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="Gray"/>
                                            </Trigger>
                                        </Style.Triggers>

                                        <Style.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5" />
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Grid x:Name="gridJoints" Visibility="Collapsed">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="600">
                 <StackPanel Orientation="Horizontal" Margin="0,100,0,0" HorizontalAlignment="Center" UserControls:ImageButton.Click="btnJoints_Click">
                    <UserControls:ImageButton x:Name="btnAnkle" Margin="60,0" BackColor="#90DDDDDD" Image="../images/Ankle_Stretching.png" Text="Ankle" Width="150" Height="200" ButtonCornerRadius="5" />
                    <UserControls:ImageButton x:Name="btnKnee" Margin="60,0" BackColor="#90DDDDDD" Image="../images/Knee_Stretching.png" Text="Knee" Width="150" Height="200" ButtonCornerRadius="5"/>
                    <UserControls:ImageButton x:Name="btnElbow" Margin="60,0" BackColor="#90DDDDDD" Image="../images/Elbow_Stretching.png" Text="Elbow" Width="150" Height="200" ButtonCornerRadius="5"/>
                    <UserControls:ImageButton x:Name="btnWrist" Margin="60,0" BackColor="#90DDDDDD" Image="../images/Wrist_Stretching.png" Text="Wrist" Width="150" Height="200" ButtonCornerRadius="5"/>
                </StackPanel>
                <Border Margin="0,100,0,100" BorderBrush="Yellow" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="80">
                    <UserControls:UserCheckBox x:Name="chkSaveJoint" Margin="5" BorderMargin="20,20,10,10" ImageMargin="10" CheckBorderThickness="2" Text="Remember my choice..." TextColor="Yellow" TextMargin="20,0" FontSize="28" />              
                </Border>               
            </StackPanel>

        </Grid>

        <Grid x:Name="gridJointSide" Visibility="Collapsed" UserControls:ImageButton.Click="btnJointSide_Click">
            <StackPanel x:Name="stackElbow" Orientation="Horizontal" Margin="100" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                <UserControls:ImageButton x:Name="btnElbowLeft" Margin="100,0" BackColor="#90DDDDDD" Image="../images/Elbow_Stretching.png" Text="Left" Width="150" Height="200" />
                <UserControls:ImageButton x:Name="btnElbowRight" Margin="100,0" BackColor="#90DDDDDD" Image="../images/Elbow_Stretching.png" IsReflected="True" Text="Right" Width="150" Height="200" />
            </StackPanel>
            <StackPanel x:Name="stackWrist" Orientation="Horizontal" Margin="100" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                <UserControls:ImageButton x:Name="btnWristLeft" Margin="100,0" BackColor="#90DDDDDD" Image="../images/Wrist_Stretching.png" Text="Left" Width="150" Height="200" />
                <UserControls:ImageButton x:Name="btnWristRight" Margin="100,0" BackColor="#90DDDDDD" Image="../images/Wrist_Stretching.png" IsReflected="True" Text="Right" Width="150" Height="200" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
